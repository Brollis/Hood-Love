<p id="notice"><%= notice %></p>

<h1>Listing Neighborhoods</h1>

<table>
  <thead>
    <tr>
      <th>Favorite hood</th>
      <th>City name</th>
      <th>Moving to city name</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @neighborhoods.each do |neighborhood| %>
      <tr>
        <td><%= neighborhood.favorite_hood %></td>
        <td><%= neighborhood.city_name %></td>
        <td><%= neighborhood.moving_to_city_name %></td>
        <td><%= link_to 'Show', neighborhood %></td>
        <td><%= link_to 'Edit', edit_neighborhood_path(neighborhood) %></td>
        <td><%= link_to 'Destroy', neighborhood, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

